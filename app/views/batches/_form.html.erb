<%=render "layouts/additional_links" %>
<table>
  <tr><td>
<%= form_for(@batch) do |f| %>
  <% if @batch.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@batch.errors.count, "error") %> prohibited this batch from being saved:</h2>

      <ul>
      <% @batch.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %></td></tr>
 <tr>
  <div class="field">
    <td><%= f.label :batch_number %><br /></td>
    <td> <%= f.text_field :batch_no %></td>
  </div> </tr>
 </tr>
 <tr>   <div class="field">
    <td><%= f.label :batch_name %><br />      </td>
    <td> <%= f.text_field :name %>             </td>
  </div> </tr>
  <tr><div class="field">
    <td><%= f.label :description %><br /> </td>
    <td> <%= f.text_field :description %></td>
  </div> </tr>
  <tr><div class="field">
    <td><%= f.label :expiry_date %><br /></td>
    <td>
      <!--input type="text" data-behaviour='datepicker' -->
      <%= f.date_select :expiry_date, :start_year => Time.now.year, order: [:day, :month, :year]%>
    </td>
  </div> </tr>
  <tr><div class="field">
    <td><%= f.label :no_of_items %><br /> </td>
    <td> <%= f.text_field :no_of_items %></td>
  </div></tr>
  <tr><div class="actions">
    <td></td><td><%= f.submit "Add Batch", :class=>"btn btn-default"%></td>
    <%=f.hidden_field :creator, :value=>@current_user.id.to_i %>
  </div>
<% end %>
  </tr>
 </table>
